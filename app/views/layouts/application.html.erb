<!DOCTYPE html>
<html>
<head>
  <title>Scribbles</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container-fluid'>
    <div class="row-fluid">
      <div class="span8 offset2">


        <div class="navbar">
          <div class="navbar-inner">
            <ul class="nav">
              <% if current_universe == nil %>
                <li><%= link_to "Stories",stories_path %></li>
              <% else %>
                <li><%= link_to "Stories",universe_stories_path(current_universe) %></li>
              <% end %>
            </ul>
          </div>
        </div>


      </div>
    </div>

    <div class="row-fluid">

      <div class="span2">
        <%= render 'common/universe_nav' %>
      </div>

      <div class="span8">
        <%= yield %>
      </div>

    </div>

  </body>
  </html>
